<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Camera">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ImageView to display the photo -->
        <ImageView
            android:id="@+id/imageViewPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

        <!-- Button to take photo -->
        <Button
            android:id="@+id/buttonTakePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Photo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true" />

        <!-- Shape Selector Buttons (hidden initially) -->
        <LinearLayout
            android:id="@+id/shapeSelectorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone">

            <Button
                android:id="@+id/buttonCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Circle" />

            <Button
                android:id="@+id/buttonSquare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Square" />

            <Button
                android:id="@+id/buttonLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Line" />
        </LinearLayout>

        <!-- Send Button (hidden initially) -->
        <Button
            android:id="@+id/buttonSendPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>